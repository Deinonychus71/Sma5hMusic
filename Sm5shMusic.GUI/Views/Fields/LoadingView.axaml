<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sm5shMusic.GUI.Views.Fields.LoadingView">
  <Grid>
    <Grid Background="Black" Opacity="0.20" RowDefinitions="*" ColumnDefinitions="*"/>
    <ProgressBar IsIndeterminate="True" MaxHeight="20"/>
    <TextBlock VerticalAlignment="Center" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,60">Please wait...</TextBlock>
  </Grid>
</UserControl>
